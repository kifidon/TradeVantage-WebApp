    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Django",
            "type": "debugpy",
            "request": "launch",
            "args": [
                "runserver"
            ],
            "django": true,
            "autoStartBrowser": false,
            "program": "${workspaceFolder}/Backend-Django/manage.py"
        }, 
        {
            "name": "Django: Test accounts.tests (keepdb)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/Backend-Django/manage.py",
            "args": [
                "test",
                "accounts.tests",
                "--keepdb"
            ],
            "django": true,
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Django: Test market.tests (keepdb)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/Backend-Django/manage.py",
            "args": [
                "test",
                "market_api.tests",
                "--keepdb"
            ],
            "django": true,
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Django: Test dashboard.tests (keepdb)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/Backend-Django/manage.py",
            "args": [
                "test",
                "dashboard_api.tests",
                "--keepdb"
            ],
            "django": true,
            "console": "integratedTerminal",
            "justMyCode": true
        }
    ]
}